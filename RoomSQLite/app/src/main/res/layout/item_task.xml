<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:cardBackgroundColor="#FAFBFD"
        app:cardElevation="5dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                tools:text="Task Name"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:textColor="#FF5252"
                android:textStyle="bold"
                android:id="@+id/tvTaskName"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true" android:layout_marginStart="100dp" android:layout_marginTop="4dp"
                android:layout_alignParentTop="true"/>

        <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                tools:text="Description"
                android:textSize="14dp"
                android:textColor="#536DFE"
                android:id="@+id/tvDescriptionTask"
                android:layout_height="wrap_content" android:layout_marginTop="12dp"
                android:layout_alignParentStart="true" android:layout_marginStart="104dp"
                android:layout_below="@+id/tvTaskName"/>

        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/task"
                android:layout_marginStart="37dp" android:layout_marginTop="12dp" android:layout_alignParentTop="true"/>

        <TextView
                android:text="@string/text_assign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUserAssigned"
                app:layout_constraintTop_toBottomOf="@+id/tvDescriptionTask"
                app:layout_constraintEnd_toEndOf="@+id/tvDescriptionTask" android:layout_marginTop="-3dp"
                android:textStyle="italic" android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/tvDescriptionTask" android:layout_marginStart="49dp"
                android:layout_below="@+id/tvDescriptionTask"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>